<script src="{{ asset('bundles/mykeesmedia/js/jquery.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/mykeesmedia/js/tinymce/tinymce.min.js') }}" type="text/javascript"></script>
<script type="text/javascript">
    var win = (!window.frameElement && window.dialogArguments) || opener || parent || top;
    {% set ext = media['media_show']['file']|split('.') %}
    {% set imageExtension = ['jpg','JPG','jpeg',"JPEG",'png','PNG','gif','GIF'] %}

    {% if ext[1] in imageExtension %}
    var html = '<img src="{{ asset('uploads/media/'~media['media_show']['file']) }}" alt="{{ media['media_show']['name'] }}" class="{{ media['align'] }}">';
    {% else %}
    var html = '<a href="{{ asset('uploads/media/'~media['media_show']['file']) }}" target="_blank" class="mk_doc_{{ media['media_show']['name'] }}">{{ media['media_show']['name'] }}</a>'
    {% endif %}

    win.send_to_editor(html);
    win.tinymce.activeEditor.windowManager.close();

</script>
